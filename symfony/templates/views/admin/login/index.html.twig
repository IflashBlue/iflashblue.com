{% extends 'layouts/admin.html.twig' %}
{% block title %}{{ 'app.views.login'|trans }}{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('admin_login') }}" method="post" class="text-center">
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'app.form.login.username'|trans|upper }}"/>
        <input type="password" id="password" name="_password" placeholder="{{ 'app.form.login.password'|trans|upper }}"/>

        <input type="hidden" name="_target_path" value="{{ path('admin_index') }}"/>

        <button type="submit" class="stylish">{{ 'app.form.login.submit'|trans|upper }}</button>
    </form>
{% endblock %}
