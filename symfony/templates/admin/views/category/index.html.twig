{% extends '../../../site/layouts' %}
{% block title %}{{ 'admin.category.categories'|trans }}{% endblock %}
{% block body %}
    <div class="row g-3">
        <div class="col-12">
            <a href="{{ path('admin_category_new') }}">
                <button class="btn btn-outline-primary">
                    {{ 'admin.category.create_category'|trans }}
                </button>
            </a>
        </div>
        <div class="col-12">
            <table class="table table-light table-bordered table-hover text-center border-primary">
                <thead>
                <tr>
                    <th class="bg-primary text-white">{{ 'admin.category.order'|trans }}</th>
                    <th class="bg-primary text-white">{{ 'admin.category.title'|trans }}</th>
                    <th class="bg-primary text-white">{{ 'admin.actions.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.order }}</td>
                        <td>{{ category.getTranslation(app.request.locale).title }}</td>
                        <td>
                            <div class="row g-1">
                                <div class="col-12">
                                    {{ include('components/_action_button.html.twig', {
                                        'type': 'outline-primary',
                                        'url': path('admin_category_edit', {'id': category.id}),
                                        'icon': 'pen-fill',
                                        'message': 'admin.actions.edit'|trans
                                    }) }}
                                </div>
                                <div class="col-12">
                                    {{ include('components/_action_button.html.twig', {
                                        'method': 'POST',
                                        'type': 'outline-danger',
                                        'url': path('admin_category_delete', {'id': category.id}),
                                        'icon': 'trash-fill',
                                        'message': 'admin.actions.delete'|trans
                                    }) }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="bg-primary text-white">{{ 'admin.category.order'|trans }}</th>
                    <th class="bg-primary text-white">{{ 'admin.category.title'|trans }}</th>
                    <th class="bg-primary text-white">{{ 'admin.actions.actions'|trans }}</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
