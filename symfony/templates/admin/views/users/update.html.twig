{% form_theme formResetPassword 'bootstrap_5_layout.html.twig' %}
{% form_theme formEditUser 'bootstrap_5_layout.html.twig' %}

{% extends 'layouts/admin.html.twig' %}
{% block title %}{{ 'admin.users.users'|trans }}{% endblock %}
{% block body %}
    <div class="row g-3">
        <div class="col-xs-12 col-md-8">
            <h1 class="text-primary fw-bold">{{ 'admin.users.update'|trans }}</h1>
            <div class="card shadow p-3 mb-5 bg-body rounded border-0">
                <div class="card-body">
                    {{ include('views/admin/users/partial/_edit_user_form.html.twig', {'form': formEditUser}) }}
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4">
            <h2 class="text-primary fw-bold">{{ 'admin.users.reset_password'|trans }}</h2>
            <div class="card shadow p-3 mb-5 bg-body rounded border-0">
                <div class="card-body">
                    {{ include('views/admin/users/partial/_reset_password_form.html.twig', {'form': formResetPassword}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
