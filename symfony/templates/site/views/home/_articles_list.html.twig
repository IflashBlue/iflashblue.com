{{ include('site/components/texts/_h2.html.twig', {'text': 'app.views.articles'|trans }) }}
<div class="layout-card-body grid grid-cols-1 lg:grid-cols-5 gap-4 items-center">
    {% for article in articles %}
        <a href="{{ article.id }}" hreflang="{{ app.request.locale }}">
            <div class="max-w-sm rounded overflow-hidden shadow-lg bg-black text-white border border-white">
                <img class="w-full" src="{{ asset(article.images.first().image) }}" alt="Sunset in the mountains">
                <div class="px-6 py-4">
                    <div class="font-bold text-xl mb-2">
                        {{ article.translation(app.request.locale).title }}
                    </div>
                    <p class="text-gray-700 text-base">
                        {{ article.translation(app.request.locale).description }}
                    </p>
                </div>
                <div class="px-6 pt-4 pb-2">
                    {% for tag in article.translation(app.request.locale).tags %}
                        <span class="inline-block rounded-full px-3 py-1 text-sm font-bold bg-white text-black mr-2 mb-2">#{{ tag }}</span>
                    {% endfor %}
                </div>
            </div>
        </a>
    {% endfor %}
</div>